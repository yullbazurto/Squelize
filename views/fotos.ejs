<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <div class="container my-5">
    <h1 class="text-center mb-4"><%= title %></h1>

    <table class="table table-hover table-bordered align-middle text-center">
      <thead class="table-primary">
        <tr>
          <th>ID</th>
          <th>Título</th>
          <th>Descripción</th>
          <th>Calificación</th>
          <th>Imagen</th>
          <th>Etiquetas</th>
          <th>Acciones</th> <!-- ✅ nueva columna para botón -->
        </tr>
      </thead>
      <tbody>
        <% arrFotos.forEach(foto => { %>
          <tr>
            <td><%= foto.id %></td>
            <td><%= foto.titulo %></td>
            <td><%= foto.descripcion %></td>
            <td><%= foto.calificacion %></td>
            <td><img src="/images/<%= foto.ruta %>" alt="Foto" class="img-thumbnail" style="width:100px;"></td>
            <td>
              <% if (foto.etiqueta && foto.etiqueta.length > 0) { %>
                <% foto.etiqueta.forEach(et => { %>
                  <span class="badge bg-info text-dark"><%= et.texto %></span>
                <% }) %>
              <% } else { %>
                <span class="text-muted">Sin etiquetas</span>
              <% } %>
            </td>
            <td>
              <a href="/fotos/<%= foto.id %>/view" class="btn btn-sm btn-primary">Ver más</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
